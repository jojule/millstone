<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
                         "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

	<!-- Servlet definitions for example applications - - - - - - - - - - -->

    <servlet>
        <servlet-name>calc</servlet-name>
        <servlet-class>org.millstone.webadapter.WebAdapterServlet</servlet-class>
        <init-param>
            <param-name>application</param-name>
            <param-value>org.millstone.examples.Calc</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>org.millstone.webadapter.WebAdapterServlet</servlet-class>
        <init-param>
            <param-name>application</param-name>
            <param-value>org.millstone.examples.Login</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>org.millstone.webadapter.WebAdapterServlet</servlet-class>
        <init-param>
            <param-name>application</param-name>
            <param-value>org.millstone.examples.HelloWorld</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>stoneplayer</servlet-name>
        <servlet-class>org.millstone.webadapter.WebAdapterServlet</servlet-class>
        <init-param>
            <param-name>application</param-name>
            <param-value>org.millstone.examples.stoneplayer.StonePlayer</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>chat</servlet-name>
        <servlet-class>org.millstone.webadapter.WebAdapterServlet</servlet-class>
        <init-param>
            <param-name>application</param-name>
            <param-value>org.millstone.examples.Chat</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>gogame</servlet-name>
        <servlet-class>org.millstone.webadapter.WebAdapterServlet</servlet-class>
        <init-param>
            <param-name>application</param-name>
            <param-value>org.millstone.examples.gogame.Go</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>features</servlet-name>
        <servlet-class>org.millstone.webadapter.WebAdapterServlet</servlet-class>
        <init-param>
            <param-name>application</param-name>
            <param-value>org.millstone.examples.features.FeaturesApplication</param-value>
        </init-param>
    </servlet>

	<!-- Namespace mappings for example applications - - - - - - - - - - - -->

    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>calc</servlet-name>
        <url-pattern>/calc/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>stoneplayer</servlet-name>
        <url-pattern>/player/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>gogame</servlet-name>
        <url-pattern>/go/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>chat</servlet-name>
        <url-pattern>/chat/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>features</servlet-name>
        <url-pattern>/features/*</url-pattern>
    </servlet-mapping>

	<!-- General servlet container configuration - - - - - - - - - - - - - -->

    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>

</web-app>
