
<project name="Millstone AjaxAdapter Release" default="package">

	<!-- Load defaults -->
	<target name="load-properties">
   		<property file="local-build.properties"/>
   		<property file="build.properties"/>
	</target>

	<!-- Initialize version information for development build-->
	<target name="init-version"  depends="load-properties, check-release-version" unless="millstone.version">
		<!-- Create current timestamp and version based on that -->
		<tstamp/>
		<property name="millstone.version" value="${DSTAMP}" />
	</target>
	
	<!-- Ensure version information for release build-->
	<target name="check-release-version" depends="load-properties" unless="millstone.version" if="release">
		<echo message="You must specify version by setting the 'millstone.version' property!"/>
		<echo message="For example: -Dmillstone.version=3.1.1"/>
	</target>

	<!-- Initialize environment -->
	<target name="init-environment" depends="check-millstone-base">
		<property environment="env"/>
		<echo message="Using JAVA_HOME: ${env.JAVA_HOME}" />	   
	</target>

	<!-- Ensure the Millstone Base libraries -->
	<target name="check-millstone-base" unless="millstone.base.dir">
		<echo message="You must specify the location of Millstone Base libraries!"/>
		<echo message="For example: -Dmillstone.base.dir=C:/Java/Millstone-Base"/>
	</target>

	<!-- Initialize working directories and other properties -->
	<target name="init" depends="load-properties, init-version, init-environment">
      
    	<!-- Working directories -->
		<property name="millstone.aa.src.dir" value="src/"/>
	    <property name="millstone.aa.build.dir" value="build/"/>
		<property name="millstone.aa.dist.dir" value="dist/"/>
	 
		<!-- Subdirectories -->
		<property name="millstone.aa.build.classes.dir" value="${millstone.aa.build.dir}/classes"/>
		<property name="millstone.aa.dist.src.dir" value="${millstone.aa.dist.dir}/src"/>
  
	    <!-- Defaults for manifest file contents-->
		<property name="millstone.aa.bin.manifest.file" value="${millstone.aa.build.dir}/millstone-aa-bin.mf"/>
		<property name="millstone.aa.src.manifest.file" value="${millstone.aa.build.dir}/millstone-aa-src.mf"/>
		<property name="millstone.aa.manifest.section" value="org/millstone/ajaxadapter"/>
		<property name="millstone.aa.spec.title" value="Millstone AjaxAdapter"/>
		<property name="millstone.aa.spec.vendor" value="IT Mill Ltd"/>
		<property name="millstone.aa.impl.title" value="Millstone AjaxAdapter"/>
		<property name="millstone.aa.impl.vendor" value="IT Mill Ltd"/>

	    <!-- Defaults for jar file names-->
		<property name="millstone.aa.bin.jar" value="${millstone.aa.dist.dir}/millstone-ajaxadapter-${millstone.version}.jar"/>
		<property name="millstone.aa.src.jar" value="${millstone.aa.dist.dir}/millstone-ajaxadapter-src-${millstone.version}.jar"/>

		<echo message="Building Millstone AjaxAdapter"/>
		<echo message="Version: ${millstone.version}" />
		<echo message="Source: ${millstone.aa.src.dir}" />
		<echo message="Millstone Base: ${millstone.base.dir}" />
		<echo message="Build: ${millstone.aa.build.dir}" />
		<echo message="Output: ${millstone.aa.dist.dir}" />
		<echo message="Debug: ${millstone.debug}" />
		<echo message="Optimize: ${millstone.optimize}" />
      
	</target>

	<!-- Clean output -->
	<target name="clean" depends="init">
		<delete dir="${millstone.aa.build.dir}"/>
		<delete dir="${millstone.aa.dist.dir}"/>
	</target>

    
    <!-- Create manifest files -->
	<target name="manifest" depends="init">
		<manifest file="${millstone.aa.bin.manifest.file}">
			<attribute name="Built-By" value="${user.name}"/>
    		<section name="${millstone.aa.manifest.section}">
      			<attribute name="Specification-Title" value="${millstone.aa.spec.title}"/>
      			<attribute name="Specification-Version" value="${millstone.version}"/>
      			<attribute name="Specification-Vendor" value="${millstone.aa.spec.vendor}"/>
      			<attribute name="Implementation-Title" value="${millstone.aa.impl.title}"/>
      			<attribute name="Implementation-Version" value="${millstone.version}"/> 
      			<attribute name="Implementation-Vendor" value="${millstone.aa.impl.vendor}"/>
    		</section>
		</manifest>	
		<manifest file="${millstone.aa.src.manifest.file}">
			<attribute name="Built-By" value="${user.name}"/>
    		<section name="${millstone.aa.manifest.section}">
      			<attribute name="Specification-Title" value="${millstone.aa.spec.title}"/>
      			<attribute name="Specification-Version" value="${millstone.version}"/>
      			<attribute name="Specification-Vendor" value="${millstone.aa.spec.vendor}"/>
      			<attribute name="Implementation-Title" value="${millstone.aa.impl.title}"/>
      			<attribute name="Implementation-Version" value="${millstone.version}"/> 
      			<attribute name="Implementation-Vendor" value="${millstone.aa.impl.vendor}"/>
    		</section>
		</manifest>		
	</target>

	<!-- Compile Millstone Base -->
	<target name="compile-millstone-base" depends="check-millstone-base">	
		<fail message="Millstone Base not specified. (Use: -Dmillstone.base.dir)" unless="millstone.base.dir"/>		
		<ant dir="${millstone.base.dir}"/>
	</target>
	
	<!-- Compile the source code -->
	<target name="compile" depends="init, compile-millstone-base">
		<fail message="Servlet Libraries not specified (Use: -Dservlet.jar)" unless="servlet.jar"/>		
        <mkdir dir="${millstone.aa.build.dir}"/>
		<mkdir dir="${millstone.aa.build.classes.dir}"/>
    	<javac srcdir="${millstone.aa.src.dir}" destdir="${millstone.aa.build.classes.dir}"
	     deprecation="on" debug="${millstone.debug}" optimize="${millstone.optimize}">
			<classpath>
				<pathelement location="${servlet.jar}"/>
				<pathelement path="${millstone.base.dir}/build/classes"/>
			</classpath> 
	     	<include name="org/millstone/ajaxadapter/**"/>
		</javac>
    </target>

    
    <!-- Package the contents -->
    <target name="package" depends="compile,manifest"> 

        <mkdir dir="${millstone.aa.dist.dir}"/>
        
        <!-- Create binary JAR -->
        <jar jarfile="${millstone.aa.bin.jar}"
             compress="true"
             manifest="${millstone.aa.bin.manifest.file}">
            <fileset dir="${millstone.aa.build.classes.dir}">
              <patternset>
                <include name="org/millstone/ajaxadapter/**/*.class"/>
              </patternset>
            </fileset>
        </jar>

        <!-- Create source JAR -->
        <jar jarfile="${millstone.aa.src.jar}"
             compress="true"
             manifest="${millstone.aa.src.manifest.file}">
            <fileset dir="${millstone.aa.src.dir}">
              <patternset>
                <include name="org/millstone/ajaxadapter/**/*.java"/>
              </patternset>
            </fileset>
        </jar>

		<!-- Copy filtered files -->
        <mkdir dir="${millstone.aa.dist.src.dir}"/>
		<copy todir="${millstone.aa.dist.src.dir}">
	    	<filterset>
    	       <filter token="VERSION" value="${millstone.version}"/>
            </filterset>
            <fileset dir="${millstone.aa.src.dir}">
              <patternset>
                <include name="**/*.java"/>
                <include name="**/*.html"/>
              </patternset>
            </fileset>	
		</copy>
	
        <!-- Convert to CRLF's and tabs -->
        <fixcrlf srcdir="${millstone.aa.dist.src.dir}"
                 eol="crlf"
		 tablength="4"
		 tab="remove"
	         includes="**/*.java"/>
	
	
		<!-- Copy unfiltered files -->
		<copy todir="${millstone.aa.dist.src.dir}">
            <fileset dir="${millstone.aa.src.dir}">
              <patternset>
                <include name="**/*.gif"/>
                <include name="**/*.jpg"/>
                <include name="**/*.png"/>
              </patternset>
            </fileset>	
		</copy>
		
    </target>
    
 </project>